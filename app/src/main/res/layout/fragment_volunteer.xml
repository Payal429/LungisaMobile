<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    tools:context=".VolunteerFragment">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/volunteer_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer Signup"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <EditText
                android:id="@+id/input_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppins"
                android:background="#F5F5F5"
                app:cornerRadius="10dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:fontFamily="@font/poppins"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="10dp"
                android:background="#F5F5F5"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:padding="12dp"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="12dp"
                android:background="#F5F5F5"
                app:cornerRadius="10dp"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Availability (select all that apply)"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerAvailability"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                app:cornerRadius="10dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Volunteer Role Preference"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerRole"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                app:cornerRadius="10dp"
                android:spinnerMode="dropdown" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_volunteer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Sign Up"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"
                app:cornerRadius="10dp"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>