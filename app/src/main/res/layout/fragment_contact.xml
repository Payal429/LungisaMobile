<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <!-- Logo at Top Left -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logolungisa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Donate Button on Right Side -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/red"
            android:padding="10dp"
            android:text="Donate"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@id/logoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoImage" />

        <!-- Scrollable content -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="56dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Background Image with Opacity -->
                    <ImageView
                        android:id="@+id/bgKnowAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:alpha="0.3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/contactus" />

                    <!-- Texts on top of Image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOW CAN WE HELP"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/how_can_we_help_body"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp"
                            android:text="Whether you have a question, suggestion, or want to connect, the Lungisa team is here and ready to help. Reach out through the form below or via our contact details â€” we're always open to meaningful conversations. Let's work together to change our communities."
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <!-- Search Bar -->
                        <EditText
                            android:id="@+id/search_contact"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:background="@android:drawable/edit_text"
                            android:hint="Search..."
                            android:inputType="text"
                            android:padding="12dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Contact Section with Red Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Let's Talk Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/lets_talk_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Let's talk!"
                                android:textColor="#D32F2F"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lets_talk_body"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:lineSpacingExtra="4dp"
                                android:text="@string/contact_us_info"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/contact_us_intro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0dp"
                                android:lineSpacingExtra="4dp"
                                android:text="@string/contact_us_info2"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Contact Details Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/contact_details_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Contact Details"
                                android:textColor="#D32F2F"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/contact_registered_office"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:lineSpacingExtra="4dp"
                                android:text="Registered Office\n4850 ext2, KANANA, HAMMANSKRAAL 0407"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/contact_operations"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:lineSpacingExtra="4dp"
                                android:text="Operations\n27269, Iqabothuleare Street, Soshanguve, 0152"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/contact_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:lineSpacingExtra="4dp"
                                android:text="Phone\n+27 68 251 6154"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/contact_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4dp"
                                android:text="Email\nlungisanpc@gmail.com"
                                android:textColor="#333333"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <!-- Contact Form Section with White Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <!-- Contact Form Title -->
                    <TextView
                        android:id="@+id/contact_form_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Contact Us"
                        android:padding="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Contact Form -->
                    <EditText
                        android:id="@+id/input_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="#F5F5F5"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        app:cardCornerRadius="10dp" />

                    <EditText
                        android:id="@+id/input_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="#F5F5F5"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        app:cardCornerRadius="10dp" />

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="#F5F5F5"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        app:cardCornerRadius="10dp" />

                    <EditText
                        android:id="@+id/input_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="#F5F5F5"
                        android:hint="Subject"
                        android:inputType="text"
                        android:padding="12dp"
                        app:cardCornerRadius="10dp" />

                    <EditText
                        android:id="@+id/input_message"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="24dp"
                        android:background="#F5F5F5"
                        android:gravity="top|start"
                        android:hint="Type your Message"
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        app:cardCornerRadius="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/send_message_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="32dp"
                        android:backgroundTint="@color/red"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="12dp"
                        android:text="Send message"
                        android:textColor="@color/white"
                        app:cornerRadius="10dp" />
                </LinearLayout>



                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- FAQ Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:padding="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/faq3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:text="FAQs"
                                    android:textColor="#D32F2F"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="center"
                                    android:text="Find quick answers to the most common questions about Lungisa and how it works."
                                    android:textColor="#333333"
                                    android:textSize="14sp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/black"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:text="Go to FAQs"
                                    android:textColor="@color/white"
                                    app:cornerRadius="10dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Requests Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:padding="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/requests2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:text="Requests"
                                    android:textColor="#D32F2F"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="center"
                                    android:text="Need support or want to report something? Submit a request and we'll get on it."
                                    android:textColor="#333333"
                                    android:textSize="14sp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/black"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:text="Go to Requests"
                                    android:textColor="@color/white"
                                    app:cornerRadius="10dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Community Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@drawable/community" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:gravity="center"
                                    android:text="Ask the Community"
                                    android:textColor="#D32F2F"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:gravity="center"
                                    android:text="Start a discussion, share insights, or get advice from others who careâ€”your voice matters."
                                    android:textColor="#333333"
                                    android:textSize="14sp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/black"
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:text="Go to Community"
                                    android:textColor="@color/white"
                                    app:cornerRadius="10dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
