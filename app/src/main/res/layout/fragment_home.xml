<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <!-- Logo at Top Left -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logolungisa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Donate Button on Right Side -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#ED1F1F"
            android:padding="10dp"
            android:text="Donate"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@id/logoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoImage" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="56dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <!-- WELCOME Section -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Background Image with Opacity -->
                    <ImageView
                        android:id="@+id/bgKnowAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hero_image"
                        android:alpha="0.3"/> <!-- Opacity -->

                    <!-- Texts on top of Image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome to Lungisa"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <!--Welcome Text-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:paddingTop="8dp"/>

                        <!--Statistics -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="12dp"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="230\nChildren"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="58\nDonations"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="26\nYears"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!-- Volunteer Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/volunteerButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:backgroundTint="#EE1F1F"
                            android:text="Volunteer Now!!!"
                            android:textColor="@android:color/white"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            app:cornerRadius="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </FrameLayout>

                <!-- Projects -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#EE1F1F">

                    <!-- Completed Projects -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed Projects"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_completed_project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_completed_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_completed_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description here"
                                android:paddingTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_completed_dates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start: --  End: --"
                                android:paddingTop="4dp"
                                android:textStyle="italic"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Current Projects -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Projects"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_current_project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_current_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_current_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description here"
                                android:paddingTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_current_dates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start: --  End: --"
                                android:paddingTop="4dp"
                                android:textStyle="italic"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Upcoming Projects -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming Projects"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:paddingBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_upcoming_project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_upcoming_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textStyle="bold"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/tv_upcoming_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description here"
                                android:paddingTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_upcoming_dates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start: --  End: --"
                                android:paddingTop="4dp"
                                android:textStyle="italic"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>




                <!-- What We Do -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="16dp"
                        android:text="WHAT WE DO"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <!-- Cards Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#EE1F1F"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Primary Health Care"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"/>

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/primarycare"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Providing essential health services to the community."
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#EE1F1F"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Psychosocial Support"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/empathy"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Helping individuals through mental and emotional support."
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#EE1F1F"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Youth Development"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/youthday"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Empowering young people through training and education."
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            app:cardBackgroundColor="#EE1F1F"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Community Partnership"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/community"
                                    android:layout_marginTop="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Building sustainable relationships with local partners."
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


                <!-- Newsletter -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/blackbackground"
                    android:padding="16dp">

                    <!-- Semi-transparent overlay (optional for readability) -->
                   <!-- <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000" />  black with 50% opacity -->

                    <!-- Center container for input + button -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:layout_margin="16dp"
                        android:elevation="4dp"
                        android:clipToPadding="false"
                        android:gravity="center_vertical"
                        android:layout_gravity="center">

                        <EditText
                            android:id="@+id/input_subscribe_email"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:hint="Enter your email"
                            android:background="@android:color/white"
                            android:padding="10dp"
                            app:cornerRadius="10dp"
                            android:inputType="textEmailAddress" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/subscribeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:backgroundTint="@color/red"
                            android:padding="10dp"
                            android:text="Subscribe"
                            android:textColor="@android:color/white"
                            app:cornerRadius="10dp" />
                    </LinearLayout>
                </RelativeLayout>




                <!-- Events -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#EE1F1F"
                    android:padding="16dp">

                    <!-- Section Heading -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Events"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="16dp"/>

                    <!-- RecyclerView for Events Cards -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/eventsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"/>
                </LinearLayout>


                <!-- Footer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#000000"
                    android:padding="16dp">

                    <!-- Links Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/link_faqs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="FAQs"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/link_requests"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Requests"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/link_community"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ask the Community"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Social Media Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/facebook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Facebook"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/instagram"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Instagram"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/twitter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Twitter"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/linkedin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="LinkedIn"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Copyright -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="© 2025 Lungisa. All rights reserved."
                        android:textColor="#AAAAAA"
                        android:textAlignment="center"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>