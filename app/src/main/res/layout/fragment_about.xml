<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AboutFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <!-- Logo at Top Left -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logolungisa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Donate Button on Right Side -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#ED1F1F"
            android:padding="10dp"
            android:text="Donate"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@id/logoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoImage" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="56dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- KNOW ABOUT US Section -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Background Image with Opacity -->
                    <ImageView
                        android:id="@+id/bgKnowAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/aboutus"
                        android:alpha="0.3"/> <!-- Opacity -->

                    <!-- Texts on top of Image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KNOW ABOUT US"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/know_about_us"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:paddingTop="8dp"/>
                    </LinearLayout>
                </FrameLayout>


                <!-- OUR MISSION (Black Box) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/black"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OUR MISSION"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mission"
                        android:textColor="@android:color/white"/>
                </LinearLayout>


                <!-- OUR VISION (Black Box) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:cardCornerRadius="10dp"
                    android:background="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OUR VISION"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vision"
                        android:textColor="@android:color/white"/>
                </LinearLayout>


                <!-- ORGANIZATIONAL VALUES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="ORGANIZATIONAL VALUES"
                    android:textColor="#D32F2F"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <!-- Accessibility Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp"
                            android:backgroundTint="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Accessibility"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#D32F2F"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ensuring that the community has access to the services provided by Lungisa and to available services."
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Respect Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:backgroundTint="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Respect"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#D32F2F"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Treating all clients with respect and fostering inclusivity."
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Confidentiality Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:backgroundTint="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Confidentiality"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#D32F2F"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Maintaining strict confidentiality of all client information."
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Integrity Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:backgroundTint="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Integrity"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#D32F2F"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Upholding honesty and safeguarding the reputation of the organization, partners, sponsors, and supporters."
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Quality Service Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            android:backgroundTint="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quality Service"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#D32F2F"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Prioritizing client needs, providing courteous service, and delivering high-quality interventions."
                                    android:textColor="#000000"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>


                <!-- INVESTMENT OPPORTUNITY -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center_horizontal">

                        <!-- Main Investment Opportunity Card -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@android:color/white"
                            android:elevation="6dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="INVESTMENT OPPORTUNITY"
                                android:textColor="#D32F2F"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:paddingBottom="8dp"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lungisa Entrepreneurial Development presents a compelling opportunity for funders seeking to make a tangible difference in the lives of vulnerable communities in South Africa. By investing in Lungisa, funders contribute to:"
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:paddingBottom="16dp"/>

                            <!-- Bullet Points as Red Cards -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_marginBottom="8dp">

                                <!-- Bullet 1 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/rounded_button"
                                    android:padding="12dp"
                                    app:cornerRadius="10dp"
                                    android:layout_marginBottom="8dp"
                                    android:elevation="4dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Improved health outcomes"
                                        android:textColor="#FFFFFF"
                                        android:textAlignment="center"/>
                                </LinearLayout>

                                <!-- Bullet 2 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/rounded_button"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp"
                                    android:elevation="4dp"
                                    app:cornerRadius="10dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Enhanced psychosocial well-being"
                                        android:textColor="#FFFFFF"
                                        android:textAlignment="center"/>
                                </LinearLayout>

                                <!-- Bullet 3 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/rounded_button"
                                    android:padding="12dp"
                                    android:layout_marginBottom="8dp"
                                    android:elevation="4dp"
                                    app:cornerRadius="10dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Empowered youth"
                                        android:textColor="#FFFFFF"
                                        android:textAlignment="center"/>
                                </LinearLayout>

                                <!-- Bullet 4 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@drawable/rounded_button"
                                    android:padding="12dp"
                                    android:elevation="4dp"
                                    app:cornerRadius="10dp"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Strengthened community resilience"
                                        android:textColor="#FFFFFF"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Closing Statement -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Your support will enable Lungisa to expand its reach, enhance service delivery, and continue making a lasting impact on the communities it serves."
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:paddingTop="16dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <!-- OUR TEAM -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="OUR TEAM"
                        android:textColor="#ED1F1F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/teamRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
