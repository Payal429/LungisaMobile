<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".AboutFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo at Top Left -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/logolungisa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- KNOW ABOUT US -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="KNOW ABOUT US"
                android:textColor="#D32F2F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="We are a non-profit organization (NPO) in South Africa with a Public Benefit Organization status and Section 18A tax-exempt status. Established in 1999, Lungisa is dedicated to addressing the healthcare and psychosocial needs of vulnerable communities, with a particular focus on children and youth. Guided by the Sustainable Development Goals, particularly Goal 3, Lungisa strives to ensure healthy lives and promote well-being for all ages."
                android:textColor="#000000" />

            <!-- OUR MISSION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="OUR MISSION"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="To provide quality healthcare and psychosocial services, enhance knowledge and skills among vulnerable community members."
                android:textColor="#000000" />

            <!-- OUR VISION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="OUR VISION"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="To cultivate a community characterized by:\n\n• High-quality physical well-being\n• Psychosocial awareness\n• Healthy cultural practices"
                android:textColor="#000000" />

            <!-- ORGANIZATIONAL VALUES -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="ORGANIZATIONAL VALUES"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Accessibility: Ensuring that the community has access to the services provided by Lungisa and to available services.\n\nRespect: Treating all clients with respect and fostering inclusivity.\n\nConfidentiality: Maintaining strict confidentiality of all client information.\n\nIntegrity: Upholding the highest standards of honesty and safeguarding the reputation of the organization, its partners, sponsors, and supporters.\n\nQuality Service: Prioritizing client needs, providing courteous service, and delivering high-quality interventions."
                android:textColor="#000000" />

            <!-- INVESTMENT OPPORTUNITY -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="INVESTMENT OPPORTUNITY"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="Lungisa Entrepreneurial Development presents a compelling opportunity for funders seeking to make a tangible difference in the lives of vulnerable communities in South Africa. By investing in Lungisa, funders contribute to:\n\n• Improved health outcomes\n• Enhanced psychosocial well-being\n• Empowered youth\n• Strengthened community resilience\n\nYour support will enable Lungisa to expand its reach, enhance service delivery, and continue making a lasting impact on the communities it serves."
                android:textColor="#000000" />

            <!-- OUR TEAM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="OUR TEAM"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Team Member 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_shape"
                    android:clipToOutline="true"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/leah" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dr Leah Shibambo\nFounder / CEO\nLeads strategy & partnerships. 25+ years in public health & youth development."
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Team Member 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_shape"
                    android:clipToOutline="true"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gary Mokoena\nProgramme Manager\n10+ years in youth development & community health."
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Team Member 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_shape"
                    android:clipToOutline="true"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nomsa" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nomsa Dlamini\nProfessional Nurse\nLeads primary-health outreach & vaccination drives."
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Team Member 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_shape"
                    android:clipToOutline="true"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/thandiwe" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thandiwe Nkosi\nSocial Worker\nSpecialises in trauma counselling & family therapy."
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
