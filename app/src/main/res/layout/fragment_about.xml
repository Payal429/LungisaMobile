<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp">

        <!-- Logo at Top Left -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/logolungisa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Donate Button on Right Side -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/donateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#ED1F1F"
            android:padding="10dp"
            android:text="Donate"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="@id/logoImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/logoImage" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="56dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <!-- KNOW ABOUT US Section -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Background Image with Opacity -->
                    <ImageView
                        android:id="@+id/bgKnowAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:alpha="0.3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/aboutus" /> <!-- Opacity -->

                    <!-- Texts on top of Image -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KNOW ABOUT US"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="8dp"
                            android:text="@string/know_about_us"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- OUR MISSION Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/black"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="4dp"
                                android:text="OUR MISSION"
                                android:textColor="@color/red"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/mission"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- OUR VISION Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="4dp"
                                android:text="OUR VISION"
                                android:textColor="@color/red"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/vision"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <!-- ORGANIZATIONAL VALUES SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="8dp"
                        android:text="ORGANIZATIONAL VALUES"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Horizontal Scroll of Cards -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp">

                            <!-- Accessibility Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                android:backgroundTint="@android:color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <!-- Heading with Image -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingBottom="4dp">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginEnd="8dp"
                                            android:contentDescription="Accessibility Icon"
                                            android:src="@drawable/accessibility" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Accessibility"
                                            android:textColor="#D32F2F"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <!-- Description -->
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Ensuring that the community has access to the services provided by Lungisa and to available services."
                                        android:textColor="#000000"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Respect Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                android:backgroundTint="@android:color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingBottom="4dp">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginEnd="8dp"
                                            android:contentDescription="Respect Icon"
                                            android:src="@drawable/respect" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Respect"
                                            android:textColor="#D32F2F"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Treating all clients with respect and fostering inclusivity."
                                        android:textColor="#000000"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Confidentiality Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                android:backgroundTint="@android:color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingBottom="4dp">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginEnd="8dp"
                                            android:contentDescription="Confidentiality Icon"
                                            android:src="@drawable/confidential" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Confidentiality"
                                            android:textColor="#D32F2F"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Maintaining strict confidentiality of all client information."
                                        android:textColor="#000000"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Integrity Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                android:backgroundTint="@android:color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingBottom="4dp">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginEnd="8dp"
                                            android:contentDescription="Integrity Icon"
                                            android:src="@drawable/integrity" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Integrity"
                                            android:textColor="#D32F2F"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Upholding honesty and safeguarding the reputation of the organization, partners, sponsors, and supporters."
                                        android:textColor="#000000"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Quality Service Card -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="12dp"
                                android:backgroundTint="@android:color/white"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingBottom="4dp">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_marginEnd="8dp"
                                            android:contentDescription="Quality Service Icon"
                                            android:src="@drawable/qualityservice" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Quality Service"
                                            android:textColor="#D32F2F"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Prioritizing client needs, providing courteous service, and delivering high-quality interventions."
                                        android:textColor="#000000"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>


                <!-- INVESTMENT OPPORTUNITY -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Main Investment Opportunity Card -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:background="@android:color/white"
                            android:elevation="6dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="8dp"
                                android:text="INVESTMENT OPPORTUNITY"
                                android:textAlignment="center"
                                android:textColor="#D32F2F"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="16dp"
                                android:text="Lungisa Entrepreneurial Development presents a compelling opportunity for funders seeking to make a tangible difference in the lives of vulnerable communities in South Africa. By investing in Lungisa, funders contribute to:"
                                android:textAlignment="center"
                                android:textColor="#000000" />

                            <!-- Bullet Points as Red Cards -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <!-- Bullet 1 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/rounded_button"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="12dp"
                                    app:cornerRadius="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Improved health outcomes"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>

                                <!-- Bullet 2 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/rounded_button"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="12dp"
                                    app:cornerRadius="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Enhanced psychosocial well-being"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>

                                <!-- Bullet 3 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/rounded_button"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="12dp"
                                    app:cornerRadius="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Empowered youth"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>

                                <!-- Bullet 4 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rounded_button"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="12dp"
                                    app:cornerRadius="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Strengthened community resilience"
                                        android:textAlignment="center"
                                        android:textColor="#FFFFFF" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Closing Statement -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingTop="16dp"
                                android:text="Your support will enable Lungisa to expand its reach, enhance service delivery, and continue making a lasting impact on the communities it serves."
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <!-- OUR TEAM -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:orientation="vertical"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingBottom="8dp"
                        android:text="OUR TEAM"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- RecyclerView with fixed height to scroll internally -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/teamRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical"/>
                </LinearLayout>

                <!-- Footer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Links Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/link_faqs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="FAQs"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/link_requests"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Requests"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/link_community"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Ask the Community"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Social Media Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/facebook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Facebook"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/instagram"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Instagram"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/twitter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Twitter"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/linkedin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="LinkedIn"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Copyright -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Â© 2025 Lungisa. All rights reserved."
                        android:textAlignment="center"
                        android:textColor="#AAAAAA" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
